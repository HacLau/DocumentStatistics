<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_video"
        android:layout_width="99dp"
        android:layout_height="99dp"
        android:src="@mipmap/ic_file_manager"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageButton
        android:id="@+id/item_play"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:background="@mipmap/ic_video_play"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <CheckBox
        android:id="@+id/item_selected"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:button="@null"
        android:checked="true"
        android:background="@drawable/bg_checkbox_circle"
        app:layout_constraintTop_toTopOf="@id/item_video"
        app:layout_constraintRight_toRightOf="@id/item_video"/>

</androidx.constraintlayout.widget.ConstraintLayout>