<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="99dp"
        android:layout_height="99dp"
        android:src="@mipmap/ic_file_manager"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <CheckBox
        android:id="@+id/item_selected"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:button="@null"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:clickable="false"
        android:background="@drawable/bg_checkbox_circle"
        app:layout_constraintTop_toTopOf="@id/item_image"
        app:layout_constraintRight_toRightOf="@id/item_image"/>
    <ImageButton
        android:id="@+id/item_play"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:visibility="gone"
        android:background="@mipmap/ic_video_play"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/item_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.2MB"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/white"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toBottomOf="@id/item_image"
        app:layout_constraintRight_toRightOf="@id/item_image"/>

</androidx.constraintlayout.widget.ConstraintLayout>