<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:paddingTop="24dp">

        <com.tqs.filemanager.ui.view.TitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:titleBar_left_src="@mipmap/ic_back_preview"
            app:titleBar_right_visible="gone"
            app:titleBar_title_text="@string/tx_video"
            app:titleBar_title_color="@color/white"/>
        <ImageView
            android:id="@+id/iv_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="88dp"
            android:layout_marginTop="60dp"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <ImageView
            android:id="@+id/iv_video_play"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="88dp"
            android:layout_marginTop="60dp"
            android:src="@mipmap/ic_video_play"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <ImageView
            android:id="@+id/iv_warning_video"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginBottom="35dp"
            android:layout_marginTop="26dp"
            android:src="@mipmap/ic_warning_preview"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iv_delete_video"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <ImageView
            android:id="@+id/iv_delete_video"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginBottom="35dp"
            android:layout_marginTop="26dp"
            android:src="@mipmap/ic_delete_preview"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/iv_share_video"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginBottom="35dp"
            android:layout_marginTop="26dp"
            android:src="@mipmap/ic_share_preview"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_delete_video"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>