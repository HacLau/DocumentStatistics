<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.tqs.filemanager.ui.activity.SplashActivity">
    <data>
        <variable
            name="viewModel"
            type="com.tqs.filemanager.vm.activity.SplashVM" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_splash">
        <ImageView
            android:id="@+id/ic_file_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_splash_filemanager"
            android:contentDescription="@string/menu_privacy_policy"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/splash_progressBar"/>

        <ProgressBar
            android:id="@+id/splash_progressBar"
            android:layout_width="214dp"
            android:layout_height="6dp"
            style="@style/CustomProgressBar"
            android:max="100"
            android:progress="0"
            android:layout_marginBottom="92dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>